<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutUsPage">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us_description"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="8dp" />

            <TextView
                android:id="@+id/contributors_title"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:text="Contributors"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contributors_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"

                android:text="Peter Kallos - Project Manager ('23)
                              \nCristian Herrera
                              \nSebastian Ala Torre ('23)
                              \nNick
                              \nTyler Carter-Mills ('23)
                              \nNasif Hossain ('23)
                              \nRyan
                              \nLogan
                              \nHarvey Freeman
                              \nConan Nguyen ('23)"
                android:textSize="16sp"
                android:textStyle="normal"
                android:/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us_phone"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us_email"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

